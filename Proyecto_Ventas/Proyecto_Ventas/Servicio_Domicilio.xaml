<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Proyecto_Ventas.Servicio_Domicilio">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="SERVICIOS A DOMICILIO" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
            </Frame>

            <Button Text="Imprimir tabla de Servicio a Domicilio" x:Name="btnsevicio" Clicked="btnservicio_Clicked"/>

            <Button Text="Mostrar Mapa del Cliente" Clicked="mostrarMapa"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>